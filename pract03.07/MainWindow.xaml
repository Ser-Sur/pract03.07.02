<Window x:Class="pract03._07.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pract03._07"
        mc:Ignorable="d"
        Title="MainWindow" Height="520" Width="640">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="Разница:" Grid.Column="1" Grid.Row="4" FontSize="14" Padding="5,-5,5,5"/>
        <Label Content="Грузоподъёмность:" Grid.Column="1" Grid.Row="1" FontSize="14" Padding="5,0,5,5"/>
        <Label Content="Имя:" Grid.Column="1" FontSize="14" Padding="5,0,5,5"/>
        <ListBox x:Name="lbShipsList" Grid.RowSpan="6" SelectionMode="Multiple"/>
        <Button x:Name="btnAdd" Grid.Column="2" Grid.Row="0" Content="Добавить" Width="100" Height="50" Margin="0,5,0,0" Click="btnAdd_Click"/>
        <Button x:Name="btnDelete" Grid.Column="2" Grid.Row="1" Content="Удалить" Width="100" Height="50" Click="btnDelete_Click"/>
        <Button x:Name="btnClone" Grid.Column="1" Grid.Row="2" Content="Клонировать" Width="100" Height="50" Click="btnClone_Click"/>
        <Button x:Name="btnClear" Grid.Column="2" Grid.Row="2" Content="Очистить" Width="100" Height="50" Click="btnClear_Click"/>
        <Button x:Name="btnCompare" Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="2" Content="Сравнить" Width="260" Height="50" Click="btnCompare_Click"/>
        <Button x:Name="btnInfo" Grid.Column="1" Grid.Row="5" Content="О программе" Width="100" Height="50" Margin="0,5,0,0" Click="btnInfo_Click"/>
        <Button x:Name="btnExit" Grid.Column="2" Grid.Row="5" Content="Выход" Width="100" Height="50" Margin="0,5,0,0" Click="btnExit_Click"/>
        <TextBox x:Name="tbName" Text="" Grid.Column="1" Grid.Row="0" Width="100" Height="50" Margin="0,5,0,0"/>
        <TextBox x:Name="tbLoadCapacity" Text="" Grid.Column="1" Grid.Row="1" Width="100" Height="50"/>
        <TextBox x:Name="tbDifference" Text="" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="4" Width="260" Height="50"/>
    </Grid>
</Window>
